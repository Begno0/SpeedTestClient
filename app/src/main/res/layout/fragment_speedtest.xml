<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpeedTestFragment">

    <begnardi.luca.graphics.RoundButtonWithLoading
        android:id="@+id/new_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:radius="70"
        custom:color_base="#0000FF"
        custom:image="@drawable/new_test"
        custom:color_hover="#0000CC"
        custom:shadow="false"
        custom:color_load="#FF0000"
        custom:text="START"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>